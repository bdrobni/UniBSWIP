@model UserBO
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>

<div>
    @using (Html.BeginForm("RegisterUser", "Site", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, "", new { @class = "form-control", @placeholder = "Username" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.TextBoxFor(m => m.Password, "", new { @class = "form-control", @placeholder = "Password" })
        </div>
        <div class="form-group">
            <input type="submit" name="submit" class="btn btn-outline-primary" value="Register" />
        </div>
    }
</div>