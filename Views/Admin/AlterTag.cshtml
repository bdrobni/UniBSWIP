@model TagBO
@{
    ViewData["Title"] = "AlterTag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div>
        @using (Html.BeginForm("SaveTagChanges", "Admin", FormMethod.Post))
        {
            <div>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    Tag name:
                    @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    Tag description:
                    @Html.TextBoxFor(m => m.Description, "", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-outline-primary" value="Save changes" />
                </div>
            </div>
        }
    </div>
</div>

